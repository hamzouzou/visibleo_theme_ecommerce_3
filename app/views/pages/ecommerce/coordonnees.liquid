- accessible
---
{% extends 'parent' %}
<!-- Car j'ai besoin d'un middle avec une zone haut et bas -->

<!-- block central haut -->
{% block 'body/middle/col-center/top' %}
<div class="row">
	<div class="col-md-12">
	{% include 'ecommerce_breadcrumb' %}
	</div>
</div>
<div>{{error}}</div>
{% endblock %}

{% block 'body/middle/col-center/middle' %}
<div class="row">
	<div class="col-md-12">
		<div class="e-commerce-coordonnees">
			<section class="top">
				<header>COORDONNEES DE LIVRAISON</header>
				<div class="content">
					<p>
						Vous pouvez renseigner ici une ou plusieurs adresses de livraison (ex: à la maison, au bureau, chez Gladys...)<br />
						Vous n'aurez plus qu'à séléctionner au moment de la commande l'adresse où vous souhaitez être livré.
					</p>
				</div>
			</section>
			<section class="select-area">
				<div class="col-md-7">
		        	Selectionnez une adresse ou saisissez-en une nouvelle
		      	</div>
		  	    <div class="col-md-3">
		          <select id='visibleo-checkout-address-select'>
		            <option value="new">Nouvelle adresse</option>
		            {% for address in visibleo_prospect.delivery_addresses %}
		              <option value="{{address.id}}">{{address.alias}}</option>
		            {% endfor %}
		          </select>
				</div>
			</section>
			<section class="address">
  	    		<div class="col-md-12">
			    <form action="{{visibleo_prospect.form_delivery_url}}" method="post" id='visibleo-checkout-address-form'>
			      {% include 'ecommerce_address_form'%}
			      <div class="actions">
			        <input type='submit' value='Valider'/>
			      </div>
			    </form>
			  </div>
			</section>
		</div>
	</div>
	<div class="col-md-12">
	</div>
</div>
{% endblock %}
